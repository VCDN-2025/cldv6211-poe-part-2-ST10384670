@{
    ViewData["Title"] = "Upcoming Events";
}

<style>
    body {
        background: url('/images/event-background.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .overlay {
        background-color: rgba(173, 216, 230, 0.9); /* Slight white overlay for readability */
        padding: 50px 20px;
        border-radius: 15px;
    }
</style>

<div class="container mt-5 overlay">
    <h1 class="text-center text-primary mb-4">🌟 Upcoming Events at EventEase 🌟</h1>
    <p class="text-center text-muted mb-5">Stay informed and never miss a moment. Check out our exciting upcoming events!</p>

    <div class="row">
        <!-- Event 1 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-lg">
                <img src="/images/image9.png" class="card-img-top" alt="Business Expo">
                <div class="card-body">
                    <h5 class="card-title">Tech Conference 2025</h5>
                    <p class="card-text">
                        📅 <strong>Date:</strong> 20 June 2025<br>
                        📍 <strong>Venue:</strong> Cape Town International Center<br>
                        🕒 <strong>Time:</strong> 10:00 AM - 4:00 PM
                    </p>
                    <a href="#" class="btn btn-primary w-100">View Details</a>
                </div>
            </div>
        </div>

        <!-- Event 2 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-lg">
                <img src="/images/image10.png" class="card-img-top" alt="Music Festival">
                <div class="card-body">
                    <h5 class="card-title">Summer Beats Music Fest</h5>
                    <p class="card-text">
                        📅 <strong>Date:</strong> 5 July 2025<br>
                        📍 <strong>Venue:</strong> Durban Stadium Grounds<br>
                        🕒 <strong>Time:</strong> 2:00 PM - Late
                    </p>
                    <a href="#" class="btn btn-success w-100">Book Tickets</a>
                </div>
            </div>
        </div>

        <!-- Event 3 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-lg">
                <img src="/images/image11.png" class="card-img-top" alt="Business Expo">
                <div class="card-body">
                    <h5 class="card-title">Business Growth Expo</h5>
                    <p class="card-text">
                        📅 <strong>Date:</strong> 12 August 2025<br>
                        📍 <strong>Venue:</strong> Sandton Convention Centre<br>
                        🕒 <strong>Time:</strong> 9:00 AM - 3:00 PM
                    </p>
                    <a href="#" class="btn btn-warning w-100">Register Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
