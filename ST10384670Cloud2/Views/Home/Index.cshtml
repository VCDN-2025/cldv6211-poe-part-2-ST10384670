@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: rgba(173, 216, 230, 0.3); /* Light blue with light transparency */
    }
</style>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-primary fw-bold">Welcome to EventEase</h1>
        <p class="lead text-secondary">Your one-stop solution for managing venues and events with style and ease.</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <img src="~/images/image.jpg3.png" class="card-img-top" alt="Venue 1">

            <h4 class="text-primary">Manage Venues</h4>
            <p class="text-muted">Create, customize, and organize your event venues across stunning locations.</p>
            <a class="btn btn-outline-primary" href="/Venues">View Venues</a>
        </div>

        <div class="col-md-4 text-center">
            <img src="~/images/imgage2.png" class="card-img-top" alt="Venue 2">

            <h4 class="text-success">Schedule Events</h4>
            <p class="text-muted">Plan extraordinary events and assign them to top-tier venues effortlessly.</p>
            <a class="btn btn-outline-success" href="/Events">View Events</a>
        </div>

        <div class="col-md-4 text-center">
            <img src="~/images/bevents.jpj.png" class="card-img-top" alt="Venue 3">

            <h4 class="text-danger">Manage Bookings</h4>
            <p class="text-muted">Keep track of reservations, prevent conflicts, and view schedules with ease.</p>
            <a class="btn btn-outline-danger" href="/Bookings">View Bookings</a>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-info fw-semibold">Why EventEase?</h2>
            <p class="mt-3 text-secondary fs-5">
                EventEase simplifies the way booking specialists handle venues and events. With cloud-based image storage,
                seamless user experience, and intelligent booking conflict prevention, you're equipped to offer
                high-end event management with confidence.
            </p>
            <a class="btn btn-lg btn-info text-white mt-3" href="/Contact">Get in Touch</a>
        </div>
    </div>
</div>


